#!/bin/bash

# Get the folder configuration
Folder="your_default_folder_name"

# Move to the /agent directory
cd /agent || exit 1

# Ensure required directories exist
mkdir -p /data/Media /data/Commands

# Create symbolic links
ln -sfn /data/Media Media
ln -sfn /data/Commands Commands

# Check if 'override' is set (modify condition as needed)
if [[ "$override" == "true" ]]; then
  mkdir -p "/share/${Folder}"
  ln -sfn "/share/${Folder}" Media/WebServerRoot/Media
fi

# Execute the Agent (replace './Agent' with the actual command to execute)
./Agent
